  <!-- List Of Values -->

  <DataTemplate
    DataType="{x:Type viewModels:ListOfValuesDistributionViewModel}">

    <Grid>

      <Grid.RowDefinitions>
        <RowDefinition
          Height="Auto" />
        <RowDefinition
          Height="*" />
        <RowDefinition
          Height="Auto" />
        <RowDefinition
          Height="Auto" />
        <RowDefinition
          Height="Auto" />
      </Grid.RowDefinitions>

      <Label
        Grid.Row="0"
        Style="{StaticResource PropertyHeader}"
        Content="Values" />

      <ListBox
        Grid.Row="1"
        SelectedIndex="{Binding SelectedIndex}"
        ItemsSource="{Binding Path=Values}"
        AlternationCount="{Binding Path=Values.Count}">

        <ListBox.ItemTemplate>
          <DataTemplate>
            <StackPanel
              Orientation="Horizontal">

              <Label
                Margin="0 3 6 3"
                VerticalAlignment="Center"
                Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TemplatedParent.(ItemsControl.AlternationIndex)}" />

              <Label
                VerticalAlignment="Center"
                Content="{Binding}" />

            </StackPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>

      </ListBox>

      <Grid
        Grid.Row="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition
            Width="Auto" />
          <ColumnDefinition
            Width="Auto" />
          <ColumnDefinition
            Width="Auto" />
        </Grid.ColumnDefinitions>

        <ContentControl
          Grid.Column="0"
          HorizontalAlignment="Stretch"
          Focusable="False"
          Content="{Binding Path=CurrentValue}"
          ContentTemplate="{Binding Path=ValueTemplate, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:DistributionEditor}}" />

        <Button
          Grid.Column="1"
          Style="{StaticResource ChromelessButtonStyle}"
          Command="{Binding AddCurrentValueToList}">
          <Rectangle
            Width="20"
            Height="20"
            Margin="2"
            HorizontalAlignment="Center"
            Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
            <Rectangle.OpacityMask>
              <VisualBrush
                Stretch="Uniform"
                Visual="{DynamicResource appbar_add}" />
            </Rectangle.OpacityMask>
          </Rectangle>
        </Button>

        <Button
          Grid.Column="2"
          Style="{StaticResource ChromelessButtonStyle}"
          Command="{Binding RemoveSelectedValueFromList}">
          <Rectangle
            Width="20"
            Height="20"
            Margin="2"
            HorizontalAlignment="Center"
            Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
            <Rectangle.OpacityMask>
              <VisualBrush
                Stretch="Uniform"
                Visual="{DynamicResource appbar_minus}" />
            </Rectangle.OpacityMask>
          </Rectangle>
        </Button>

        <Button
          Grid.Column="3"
          Style="{StaticResource ChromelessButtonStyle}"
          Command="{Binding ImportValuesFromCsv}">
          <Rectangle
            Width="20"
            Height="20"
            Margin="2"
            HorizontalAlignment="Center"
            Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
            <Rectangle.OpacityMask>
              <VisualBrush
                Stretch="Uniform"
                Visual="{DynamicResource appbar_folder_open}" />
            </Rectangle.OpacityMask>
          </Rectangle>
        </Button>
      </Grid>

      <controls1:ToggleSwitch
        Grid.Row="3"
        OnLabel="Use values periodically"
        OffLabel="Only use values one time"
        IsChecked="{Binding IsPeriodic}" />

    </Grid>

  </DataTemplate>

