          Property="VerticalAlignment"
          Value="Top" />
        <Setter
          Property="Margin"
          Value="1" />
        <Setter
          Property="Foreground"
          Value="{DynamicResource GrayBrush1}" />
        <Setter
          Property="Visibility"
          Value="{Binding Path=ShowDayNumbers, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:TimeAxisDay}, Converter={StaticResource BoolToVisibility}, ConverterParameter=false}" />

      </Style>

    </ResourceDictionary>

  </UserControl.Resources>

