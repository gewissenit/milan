<UserControl
  x:Class="Milan.UI.Views.FlowPerspectiveView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition
        Width="1*" />
      <ColumnDefinition
        Width="2*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <ContentControl
      Name="ModelNavigator"
      Grid.Column="0"
      Grid.Row="0"
      Grid.RowSpan="2"
      Margin="{StaticResource GridThickness}" />

    <GridSplitter
      Grid.Column="0"
      Grid.Row="0"
      Grid.RowSpan="2"
      Style="{StaticResource HorizontalGridSplitter}" />

    <ContentControl
      Name="CostFlows"
      Grid.Column="1"
      Grid.Row="0"
      Margin="{StaticResource GridThickness}"
      Focusable="False" />

    <GridSplitter
      Grid.Column="1"
      Grid.Row="0"
      Style="{StaticResource VerticalGridSplitter}" />

    <ContentControl
      Name="MaterialFlows"
      Grid.Column="1"
      Grid.Row="1"
      Margin="{StaticResource GridThickness}"
      Focusable="False" />

  </Grid>
</UserControl>